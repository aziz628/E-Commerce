<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="/js/pages/admin.js" defer>
</script>
</head>
<body class="bg-light">

<div class="container mt-5">
  <h1 class="mb-4 text-center">üõ†Ô∏è Admin Dashboard</h1>

  <!-- Product Form -->
  <div class="card mb-4">
    <div class="card-header">Add Product</div>
    <div class="card-body">
      <form id="productForm" class="row g-3">
        <div class="col-md-4">
          <input name="description" class="form-control" placeholder="Description" required>
        </div>
        <div class="col-md-2">
          <input name="price" type="number" class="form-control" placeholder="Price" required>
        </div>
        <div class="col-md-2">
          <input name="discounted_price" type="number" class="form-control" placeholder="Discounted Price">
        </div>
        <div class="col-md-4">
          <input name="image_url" type="text" class="form-control" placeholder="Image URL">
        </div>
        <div class="col-md-2">
          <input name="quantity" type="number" class="form-control" placeholder="Quantity">
        </div>
        <div class="col-md-4">
          <input name="category" type="text" class="form-control" placeholder="Category">
        </div>
        <div class="col-12">
          <button class="btn btn-primary w-100">Add Product</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Notification Form -->
  <div class="card mb-4">
    <div class="card-header">Send Global Notification</div>
    <div class="card-body">
      <form id="notifForm" class="d-flex gap-2">
        <textarea id="id_notification_text" class="form-control" placeholder="Write notification..." required></textarea>
        <button class="btn btn-warning">Send</button>
      </form>
    </div>
  </div>

  <!-- Users Table -->
  <div class="card">
    <div class="card-header">Send Notification to User</div>
    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>User ID</th>
            <th>Email</th>
            <th>Created At</th>
            <th>Notification</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user) => { %>
            <tr>
              <td id="user_id"><%= user.id %></td>
              <td><%= user.email %></td>
              <td><%= user.created_at %></td>
              <td>
                <div class="d-flex gap-2">
                  <input type="text" class="form-control" placeholder="Notification">
                  <button class="btn btn-sm btn-success">Send</button>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</div>

</body>
</html>
