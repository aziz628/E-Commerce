<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Control Center - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .ai-status-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .metric-card {
            background: #f8f9fa;
            border-left: 4px solid #007bff;
        }
        .ai-running {
            background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
        }
        .ai-stopped {
            background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
        }
        .task-queue {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }
        .error-rate {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        }
        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid #3498db;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/admin/dashboard">
                <i class="fas fa-robot"></i> AI Control Center
            </a>
            <a href="/admin/dashboard" class="btn btn-outline-light">
                <i class="fas fa-arrow-left"></i> Back to Admin
            </a>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- AI Status Overview -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card ai-status-card text-center">
                    <div class="card-body">
                        <i class="fas fa-brain fa-2x mb-2"></i>
                        <h5 class="card-title">AI Status</h5>
                        <div id="aiStatus" class="h6">
                            <div class="loading"></div> Loading...
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card metric-card text-center">
                    <div class="card-body">
                        <i class="fas fa-tasks fa-2x mb-2 text-primary"></i>
                        <h5 class="card-title">Tasks Completed</h5>
                        <div id="tasksCompleted" class="h4 text-primary">0</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card metric-card text-center">
                    <div class="card-body">
                        <i class="fas fa-clock fa-2x mb-2 text-success"></i>
                        <h5 class="card-title">Avg Response Time</h5>
                        <div id="avgResponseTime" class="h4 text-success">0ms</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card metric-card text-center">
                    <div class="card-body">
                        <i class="fas fa-exclamation-triangle fa-2x mb-2 text-warning"></i>
                        <h5 class="card-title">Error Rate</h5>
                        <div id="errorRate" class="h4 text-warning">0%</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- AI Controls -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-cog"></i> AI Control Panel
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="d-grid gap-2">
                                    <button id="startAI" class="btn btn-success">
                                        <i class="fas fa-play"></i> Start AI Service
                                    </button>
                                    <button id="stopAI" class="btn btn-danger">
                                        <i class="fas fa-stop"></i> Stop AI Service
                                    </button>
                                    <button id="resetAI" class="btn btn-warning">
                                        <i class="fas fa-redo"></i> Emergency Reset
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-grid gap-2">
                                    <button id="healthCheck" class="btn btn-info">
                                        <i class="fas fa-heartbeat"></i> Health Check
                                    </button>
                                    <button id="userAnalysis" class="btn btn-secondary">
                                        <i class="fas fa-chart-line"></i> User Analysis
                                    </button>
                                    <button id="refreshMetrics" class="btn btn-primary">
                                        <i class="fas fa-sync"></i> Refresh Metrics
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- AI Task Management -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-robot"></i> Autonomous Notification
                        </h5>
                    </div>
                    <div class="card-body">
                        <form id="autoNotificationForm">
                            <div class="mb-3">
                                <label class="form-label">Message</label>
                                <textarea class="form-control" name="message" rows="3" placeholder="Enter notification message..."></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Timing</label>
                                <select class="form-select" name="timing">
                                    <option value="immediate">Immediate</option>
                                    <option value="optimal">AI Optimized</option>
                                    <option value="scheduled">Scheduled</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-bell"></i> Queue Notification
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-box"></i> Auto Product Management
                        </h5>
                    </div>
                    <div class="card-body">
                        <form id="autoProductForm">
                            <div class="mb-3">
                                <label class="form-label">Action</label>
                                <select class="form-select" name="action">
                                    <option value="optimize_pricing">Optimize Pricing</option>
                                    <option value="update_inventory">Update Inventory</option>
                                    <option value="categorize_products">Categorize Products</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Product Data (JSON)</label>
                                <textarea class="form-control" name="productData" rows="3" placeholder='{"productId": 123, "data": {}}'></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-cogs"></i> Queue Task
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- AI Monitoring -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-bar"></i> AI Performance Metrics
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card task-queue text-white text-center">
                                    <div class="card-body">
                                        <h5>Task Queue</h5>
                                        <div id="taskQueue" class="h3">0</div>
                                        <small>Tasks pending</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card error-rate text-white text-center">
                                    <div class="card-body">
                                        <h5>Error Rate</h5>
                                        <div id="errorRateDetailed" class="h3">0%</div>
                                        <small>Current error rate</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card ai-running text-white text-center">
                                    <div class="card-body">
                                        <h5>Uptime</h5>
                                        <div id="uptime" class="h3">0s</div>
                                        <small>Since last restart</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- AI Error Logs -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-exclamation-circle"></i> AI Error Logs
                        </h5>
                    </div>
                    <div class="card-body">
                        <div id="errorLogs" class="table-responsive">
                            <p class="text-muted">No error logs available</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/pages/ai-dashboard.js"></script>
</body>
</html>