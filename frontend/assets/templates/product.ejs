    <main>
    <section class="container">
        <div class="images_container">
            <div class="main_image">
                <img src="<%= image_url %>" alt="">
             <i class="search"></i>
             <i class="sale"></i>
            </div>
            <ul class="more_images">
                <% for (let i=0;i<4;i++){ %>
                <li> <img src="<%= image_url %>" alt=""></li>
                <% } %>
            </ul>
        </div>
        <div class="product-summary" data-id="1000">
            <div class="links">
                <a href="">Home</a> &nbsp;/&nbsp; <a href="">Kitchen_Appliances</a>
            </div>
            <h2><%=description %>
            </h2>
            <p class="price">
                <del class="discount"><%=price %>$</del> <span><%=discounted_price %>$</span>
            </p>
            <h3>key features</h3>
            <ul class="features">
                <% features.forEach((feature)=>{ %>
                    <li><%=feature %></li>
                <% }) %>
            </ul>
            <div class="input_wrapper">
                <div class="quantity">
                    <button data-action="decrease_number">-</button>
                    <input  data-action="product_number_input" type="text" value="1">
                    <button data-action="increase_number" >+</button>
                </div>
                 <button data-action="add_to_cart" class="add_to_cart">Add to cart</button> 
            </div>
            <div class="category">category :
                <a href=""><%= category%></a>
            </div>
        </div>
        <div class="related_products"> </div>
        
    </section>
    <section class="more_info">
        <ul class="tabs">
            <li>
                <a href="">description</a>
            </li>
            <li>
                <a href="">reviews</a>
            </li>
